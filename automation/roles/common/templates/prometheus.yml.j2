global:
  scrape_interval: 15s
  external_labels:
    monitor: '{{ aws_prometheus_monitoring_label }}'

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    scrape_interval: 15s
    static_configs:
      - targets: ['127.0.0.1:9100']

  - job_name: 'rollup'
    scrape_interval: 15s
    static_configs:
      - targets: ['127.0.0.1:9845']

remote_write:
  - url: '{{ aws_prometheus_remote_write_url }}'
    sigv4:
      region: '{{ aws_region }}'